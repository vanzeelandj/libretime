[Unit]
Description=LibreTime API Service

[Service]
Type=notify
NotifyAccess=all
KillSignal=SIGQUIT

Environment=LIBRETIME_LOG_FILEPATH=/var/log/libretime/api.log

ExecStart=/usr/bin/uwsgi /etc/airtime/libretime-api.ini
User=libretime-api
Group=libretime-api
Restart=always

[Install]
WantedBy=multi-user.target
